<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/logo_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:fontFamily="@font/kkanit"
        android:text="Foire aux questions"
        android:textColor="@color/gold_logo"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kkanit"
        android:text="Voici les questins les plus posées par les élèves de Learn chinese"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageFAQ"
        android:layout_width="203dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/faq_logo" />

    <TextView
    android:id="@+id/textq1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="\nQu\’est-ce que le Hanyu Shuiping Kaoshi (HSK) ?"
    android:fontFamily="@font/kkanit"
    android:textColor="@color/black"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:textSize="12dp"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textans1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le Hanyu Shuiping Kaoshi est un test d’évaluation du chinois normalisé\n par la RDC pour permettre aux personnes de tester leurs compétences linguistiques en madarin. \nLe HSK se décompose en 6 niveaux, avec un vocabulaire associé à la difficulté du niveau.\n"
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textq1" />

    <TextView
        android:id="@+id/textq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nQuelles sont les ressources mises à dispositions dans le cadre de l\’apprentissage du chinois"
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textans1" />

    <TextView
        android:id="@+id/textans2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour que le format d\’apprentissage soit adapté aux élèves mais aussi à la préparation du test, LearnChinese propose une diversité d’exercices :\n- Reconnaissance du mot par image \n- Reconnaissance du mot par du texte \n- Complétion de phrases types de l’examen
    \nNous mettons également à disposition des tests blancs pour préparer au mieux l’examen final."
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textq2" />

    <TextView
        android:id="@+id/textq3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nJe me sens prêt(e) à passer l\’examen, comment cela se passe-t-il ?"
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textans2" />

    <TextView
        android:id="@+id/textans3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous pouvez consulter notre article disponible sur notre site web.\nVous trouverez les prochaines sessions et les centres d\'examen les plus proches"
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textq3" />

    <TextView
        android:id="@+id/textq4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n Vous n'avez pas trouvé de réponse à votre question ?"
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textans3" />

    <TextView
        android:id="@+id/textans4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contactez nous à l'adresse suivante : \n questions@learnchinese.fr\n \n"
        android:fontFamily="@font/kkanit"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textq4" />

    <Button
        android:id="@+id/button_back_home"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:text="Retour à la page d'\accueil"
        android:textSize="10dp"
        android:layout_marginTop="-25dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />


</LinearLayout>